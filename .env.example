# RagRec Configuration
# Copy this to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# PostgreSQL + pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ragrec
POSTGRES_USER=ragrec
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://ragrec:changeme@localhost:5432/ragrec

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# Qdrant (optional, alternative to pgvector)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Embeddings
SIGLIP_MODEL=google/siglip-base-patch16-224
SIGLIP_BATCH_SIZE=32
EMBEDDING_DIM=768

# Recommendations
TOP_K_CANDIDATES=100
RERANK_TOP_N=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
ENVIRONMENT=development
DEBUG=false
